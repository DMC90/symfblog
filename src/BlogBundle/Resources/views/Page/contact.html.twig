{# src/Blogger/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'BlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact Symfblog</h1>
    </header>

    {% for noticeMessage in app.session.flashbag.get('email-notice') %}
        <div class="blogger-notice">
            {{ noticeMessage }}
        </div>
    {% endfor %}

    <p>Want to contact Symfblog?</p>

    <form action="{{ path('blog_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}
        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form >

{% endblock %}